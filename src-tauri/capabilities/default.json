{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"shell:allow-execute",
		"dialog:allow-save",
		"fs:allow-write-text-file",
		{
			"identifier": "http:default",
			"allow": [{ "url": "https://flathub.org/*" }]
		}
	]
}
